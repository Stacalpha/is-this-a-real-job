<% include partials/header %>
  <% include partials/nav2 %>
    <div id="cover">
      <div class="loader"></div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col">
          <h4 class="new_post_heading">
            Edit Post
          </h4>
        </div>
      </div>
      <div class="row">
        <div class=" post-form col-md-10">
          <form action="javascript:void(0);" class="edit-post">
            <input type="hidden" name="inviteId" value="<%= invite.inviteId %>" />
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <input type="text" class="form-control" name="company" id="companyName" placeholder="Company Name" value="<%=invite.company%>" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <input type="text" class="form-control" name="location" id="jobLocation" placeholder="Job location" value="<%=invite.location%>" />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class=" form-group ">
                  <input type="text" class="form-control" name="title" id="title" required placeholder="Title" value="<%=invite.title%>">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <input type="file" class="form-control" name="media" id="media" placeholder="Media">
                </div>
              </div>
            </div>
            <div class="form-group">
              <textarea class="form-control" id="body" name="body" rows="5" placeholder="Type Something..." required><%=invite.body%></textarea>
            </div>
            <div class="text-left">
              <button type="submit" class="btn btn-primary">Update</button>
              <a href="/post/<%= invite.inviteId %>" class="btn btn-danger">Cancel</a>
            </div>
          </form>
        </div>
      </div>

    </div>
    <% include partials/footer %>
